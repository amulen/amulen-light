{% extends 'base.html.twig' %}

{% block body -%}
<div class="page-header">
    <h1>Perfiles</h1>
</div>
<div>
    <form class="form-horizontal" method="post" action="{{ app.request.basepath }}/login_check">
        <div class="form-group">
            <label class="control-label col-md-2">Eleg√≠</label>
            <div class="col-md-6">
                <select name="profile" class="form-control">
                    {% for profile_id, profile in profiles %}

                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="btn btn-primary">Elegir</button>
            </div>
        </div>
    </form>
</div>

{% endblock %}